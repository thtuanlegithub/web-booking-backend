<div class="container mt-3">
    <div class="px-2 mb-2 dashboard-title">
        Package
    </div>
    <div class="d-flex mb-3">
        <select class="form-select custom-width-select" id="packageFilter">
            <option disabled selected>Choose Filter...</option>
            <option value="1" class="font-weight-bold">Name</option>
            <option value="2" class="font-weight-bold">Type</option>
            <option value="3" class="font-weight-bold">City</option>
        </select>
        <input placeholder="Search with filter..." type="text" class="form-control custom-width-input mx-2"
            aria-label="Text input with dropdown button">
    </div>
    <table id="packageTable" class="table table-hover table-bordered table-striked">
        <thead>
            <tr>
                <th class="col-1">#</th>
                <th class="col-4">Name</th>
                <th class="col-2">Type</th>
                <th class="col-2">City</th>
                <th class="col-3">Operations</th>
            </tr>
        </thead>
        <tbody id="table-content">
            <%packageList.forEach(function(item, index){%>
                <tr>
                    <th scope="row">
                        <%=index+1%>
                    </th>
                    <td>
                        <%=item.packageName%>
                    </td>
                    <td>
                        <%=item.packageType%>
                    </td>
                    <td>
                        <%=item.packageCity%>
                    </td>
                    <td>
                        <button class="btn btn-primary rounded-circle">
                            <i class="fa-solid fa-info btn-icon"></i>
                        </button>
                        <button class="btn btn-success rounded-circle">
                            <i class="fa-solid fa-gear" style="color: #ffffff;"></i>
                        </button>
                        <button class="btn btn-danger rounded-circle">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <!-- Pagination -->
    <nav id="paging" aria-label="Page navigation example">
        <ul class="pagination justify-content-end" id="pagination-container">
            <!-- Các trang của phân trang sẽ được tạo ở đây -->
        </ul>
    </nav>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-success justify-content-end d-block float-right p-2" data-bs-toggle="modal"
        data-bs-target="#addNewPackage">Add new package</button>
    <!-- Modal -->
    <div class="modal fade" id="addNewPackage" tabindex="-1" aria-labelledby="addNewPackageLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-custom">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add new package</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="POST" action="package/create-package">
                        <div class="mb-3">
                            <label class="col-form-label">Package Image:</label>
                            <!--Image-->
                            <div>
                                <div class="mb-4 d-flex justify-content-center">
                                    <img id="selectedImage" src="img/imgPlaceHolder.jpg" alt="example placeholder"
                                        style="width: 300px;" />
                                </div>
                                <div class="d-flex justify-content-center">
                                    <div class="btn btn-primary btn-rounded">
                                        <label class="form-label text-white m-1" style="cursor: pointer;"
                                            for="fileInput">Choose
                                            file</label>
                                        <input type="file" class="form-control d-none" id="fileInput"
                                            content="Choose File"
                                            onchange="displaySelectedImage(event, 'selectedImage')" />
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" name="packageImage" id="packageImage" />

                        </div>
                        <div class="mb-3">
                            <label for="packageName" class="col-form-label">Package Name:</label>
                            <input name="packageName" type="text" class="form-control" id="packageName">
                        </div>
                        <div class="d-flex">
                            <div class="mb-3 flex-1 mr-2">
                                <label for="packageType" class="col-form-label">Type: </label>
                                <select name="packageType" class="form-select custom-width-select" id="packageType">
                                    <option disabled selected>Choose type...</option>
                                    <option value="1">Thăm thắng cảnh</option>
                                    <option value="2">Ăn uống</option>
                                    <option value="3">Mua sắm</option>
                                    <option value="4">Giải trí</option>
                                    <option value="5">Thể thao</option>
                                    <option value="6">Kiến thức</option>
                                    <option value="7">Giao lưu văn hóa</option>
                                    <option value="8">Khác</option>
                                </select>
                            </div>
                            <div class="mb-3 flex-2">
                                <label for="packageCity" class="col-form-label">City: </label>
                                <select name="packageCity" class="form-select custom-width-select" id="packageCity">
                                    <option disabled selected>Choose City...</option>
                                    <option value="1">Type 1</option>
                                    <option value="2">Type 2</option>
                                    <option value="3">Type 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="packageDescription" class="col-form-label">Description:</label>
                            <textarea name="packageDescription" class="form-control" id="packageDescription"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                            <button type="submit" id="submitBtn" class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
