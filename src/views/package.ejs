<script defer>
    $('#paging').pagination({
        dataSource: '/api/package-data',
        locator: 'DT',
        totalNumberLocator: (response) => {
            const totalPage = response.TotalPage * 10;
            return totalPage;
        },
        pageSize: 10,
        afterPageOnClick: function (event, pageNumber) {
            loadPage(pageNumber);
        },
        afterPreviousOnClick: function (event, pageNumber) {
            loadPage(pageNumber);
        },
        afterNextOnClick: function (event, pageNumber) {
            loadPage(pageNumber);
        }
    })

    function loadPage(page) {
        $.ajax({
            url: 'api/package-data?page=' + page
        })
            .then(data => {
                const tableBody = document.getElementById("table-content");
                tableBody.innerHTML = ''; // Xóa dữ liệu cũ trong tbody

                data.DT.forEach((item, index) => {
                    const row = document.createElement('tr');
                    row.innerHTML = `<th scope="row">${parseInt(page - 1) * 10 + index + 1}</th>
                                <td>${item.packageName}</td>
                                <td>${item.packageType}</td>
                                <td>${item.packageCity}</td>
                                <td>
                                    <button class="btn btn-primary rounded-circle" onclick="loadPackageData(${item.id})">
                                        <i class="fa-solid fa-gear" style="color: #ffffff;"></i>
                                    </button>
                                    <button class="btn btn-danger rounded-circle">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>`;
                    tableBody.appendChild(row);
                });
            })
            .catch(error => {
                console.log(error);
            })
    }

