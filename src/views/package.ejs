        measurementId: "G-J2FLN8G0FQ"
    };
    const app = firebase.initializeApp(firebaseConfig);
    const storage = app.storage();

    function generateUniqueId() {
        const randomArray = new Uint32Array(2);
        crypto.getRandomValues(randomArray);

        const uniqueId = randomArray[0].toString(16) + randomArray[1].toString(16);
        console.log('Generated ID:', uniqueId);
        return uniqueId;
    }

    function openFileInput() {
        document.getElementById('fileInput').click();
    }


    function displaySelectedImage(event, imgId) {
        const file = event.target.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
            const imgElement = document.getElementById(imgId);
            imgElement.src = e.target.result;
        };

        reader.readAsDataURL(file);
    }

    const uploadImageAndSubmit = async () => {
        console.log("Upload called");
        const fileInput = document.getElementById('fileInput');
        const file = fileInput.files[0];

        if (file) {
            console.log("Has file");
            const storageRef = firebase.storage().ref();
            const imageId = generateUniqueId(); // Hàm để tạo id unique, bạn cần tự định nghĩa
            const imageRef = storageRef.child(imageId);
            await imageRef.put(file).then((snapshot) => {
                console.log('Uploaded a file!');

                // Lấy ID của ảnh - lưu vào input packageImage của form
                document.getElementById('packageImage').value = imageId;
            })
            return true;
        } else {
            console.log('No file selected');
            return false;
        }
    }
    document.querySelector('form').addEventListener('submit', async (event) => {
        event.preventDefault();
        const uploadResult = await uploadImageAndSubmit();
        console.log("Upload Result: ", uploadResult);
        // console.log(document.getElementById("packageImage").value);
        // Lấy tham chiếu đến biểu mẫu và gọi phương thức submit()
        document.querySelector('form').submit();
    });
    // Function to load and display image in modal
    const loadImageIntoUpdateModal = (imageId) => {
        // Reference to the image in Firebase Storage
        const imageRef = storage.ref().child(imageId);

        // Get the download URL of the image
        imageRef.getDownloadURL()
            .then((url) => {
                // Update the image element in the modal
                let imgElement = document.getElementById('selectedImageUpdate');
                imgElement.setAttribute("src", url);
                console.log(imgElement.src);

                // Open the updatePackage modal
                $('#updatePackage').modal('show');
            })
            .catch((error) => {
                console.error('Error getting download URL:', error);
            });
    }

    // Example of how to call the function

    function loadPackageData(packageId) {
        // Thực hiện Ajax request để lấy dữ liệu của package
        $.ajax({
            url: `/api/read-package/${packageId}`, // Điều chỉnh URL tùy thuộc vào cách bạn cài đặt API
            method: 'GET',
            success: async function (data) {
                console.log(data.DT);
                // Xử lý dữ liệu nhận được từ server
                // Hiển thị dữ liệu trong modal, bạn có thể sử dụng jQuery hoặc JavaScript thuần túy tùy thuộc vào yêu cầu của bạn

                // Ví dụ: Hiển thị tên gói trong một thẻ div có id là "packageName"
                document.getElementById("packageNameUpdate").value = data.DT.packageName;
                if (data.DT.packageImage != null) {
                    await loadImageIntoUpdateModal(data.DT.packageImage);
                }
                else if (data.DT.packageImage == null || data.DT.packageImage == "") {
                    let imgElement = document.getElementById('selectedImageUpdate');
                    imgElement.setAttribute("src", "/img/imgPlaceHolder.jpg");
                    $('#updatePackage').modal('show');
                }

