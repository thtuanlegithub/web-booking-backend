    <script>
        // Sử dụng AJAX hoặc Fetch API để tải dữ liệu từ API
        fetch('/api/package-data')
            .then(response => response.json())
            .then(data => {
                console.log(data);
                // Dữ liệu đã tải từ API, hãy hiển thị nó trong bảng
                const tableBody = document.querySelector('#package-table tbody');
                data.DT.forEach((item, index) => {
                    console.log(item);
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <th scope="row">${index + 1}</th>
                        <td>${item.packageName}</td>
                        <td>${item.packageType}</td>
                        <td>${item.packageCity}</td>
                        <td>
                            <button class="btn btn-primary rounded-circle">
                                <i class="fa-solid fa-info btn-icon"></i>
                            </button>
                            <button class="btn btn-success rounded-circle">
                                <i class="fa-solid fa-gear" style="color: #ffffff;"></i>
                            </button>
                            <button class="btn btn-danger rounded-circle">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });

                // Tính toán tổng số trang dựa trên số dòng dữ liệu
                const totalRecords = data.DT.length;
                const pageSize = 1; // Số dòng trên mỗi trang
                const totalPages = Math.ceil(totalRecords / pageSize);

                // Tạo các nút trang
                const paginationContainer = document.querySelector('#pagination-container');
                for (let i = 1; i <= totalPages; i++) {
                    const pageLink = document.createElement('li');
                    pageLink.innerHTML = `<a class="page-link" href="#">${i}</a>`;
                    paginationContainer.appendChild(pageLink);
                }

                // Khởi tạo phân trang Pagination.js
                $('#pagination-container').pagination({
                    dataSource: {
                        data: data.DT,
                        locator: "DT"
                    },
                    pageSize: 1,
                    showPageNumbers: true, // Hiển thị số trang
                    showNavigator: true, // Hiển thị nút "Previous" và "Next"
                    formatNavigator: " < < previous, next > > ", // Định dạng nút "Previous" và "Next"
                    callback: function (data, pagination) {
                        // Xử lý dữ liệu phân trang nếu cần
                    },
                });
            })
            .catch(error => console.error(error));
    </script>

