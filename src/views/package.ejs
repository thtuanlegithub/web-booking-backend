<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"></script>
<div class="container mt-3">
    <div class="px-2 mb-2 dashboard-title">
        Package
    </div>
    <div class="d-flex mb-3">
        <select class="form-select custom-width-select font-weight-bold" id="packageFilter">
            <option selected>Choose Filter...</option>
            <option value="1" class="font-weight-bold">Name</option>
            <option value="2" class="font-weight-bold">Type</option>
            <option value="3" class="font-weight-bold">City</option>
        </select>
        <input placeholder="Search with filter..." type="text" class="form-control custom-width-input mx-2"
            aria-label="Text input with dropdown button">
    </div>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th class="col-1">#</th>
                <th class="col-4">Name</th>
                <th class="col-2">Type</th>
                <th class="col-2">City</th>
                <th class="col-3">Operations</th>
            </tr>
        </thead>
        <tbody>
            <%packageList.forEach(function(item, index){%>
                <tr>
                    <th scope="row">
                        <%=index+1%>
                    </th>
                    <td>
                        <%=item.packageName%>
                    </td>
                    <td>
                        <%=item.packageType%>
                    </td>
                    <td>
                        <%=item.packageCity%>
                    </td>
                    <td>
                        <button class="btn btn-primary rounded-circle">
                            <i class="fa-solid fa-info btn-icon"></i>
                        </button>
                        <button class="btn btn-success rounded-circle">
                            <i class="fa-solid fa-gear" style="color: #ffffff;"></i>
                        </button>
                        <button class="btn btn-danger rounded-circle">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-success justify-content-end d-block float-right" data-bs-toggle="modal"
        data-bs-target="#exampleModal">Add new package</button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-custom">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add new package</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="packageImage" class="col-form-label">Package Image:</label>
                            <!--Image-->
                            <div>
                                <div class="mb-4 d-flex justify-content-center">
                                    <img id="selectedImage" src="img/imgPlaceHolder.jpg" alt="example placeholder"
                                        style="width: 300px;" />
                                </div>
                                <div class="d-flex justify-content-center">
                                    <div class="btn btn-primary btn-rounded">
                                        <label class="form-label text-white m-1" for="customFile1">Choose file</label>
                                        <input type="file" class="form-control d-none" id="customFile1"
                                            onchange="displaySelectedImage(event, 'selectedImage')" />
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="mb-3">
                            <label for="packageName" class="col-form-label">Package Name:</label>
                            <input type="text" class="form-control" id="packageName">
                        </div>
                        <div class="d-flex">
                            <div class="mb-3 flex-1 mr-2">
                                <label for="packageType" class="col-form-label">Type: </label>
                                <select class="form-select custom-width-select" id="packageType">
                                    <option selected>Choose Type...</option>
                                    <option value="1">Type 1</option>
                                    <option value="2">Type 2</option>
                                    <option value="3">Type 3</option>
                                </select>
                            </div>
                            <div class="mb-3 flex-2">
                                <label for="packageCity" class="col-form-label">City: </label>
                                <select class="form-select custom-width-select" id="packageCity">
                                    <option selected>Choose City...</option>
                                    <option value="1">Type 1</option>
                                    <option value="2">Type 2</option>
                                    <option value="3">Type 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="col-form-label">Description:</label>
                            <textarea class="form-control" id="description"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>